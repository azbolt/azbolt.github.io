              %textarea.col-md-8.col-sm-8.col-xs-12.col-md-offset-2.col-sm-offset-2{:name => "message", :placeholder => "Your message", :required => "", :rows => "5"}
              %button.round-button#contact-button.col-md-4.col-sm-6.col-xs-12.col-md-offset-4.col-sm-offset-3{:type => "submit"}
                %span
                  Send message
